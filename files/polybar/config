[module/spotify]
type = custom/script
interval = 2
label = %output%
label-maxlen = 60
exec = ~/.config/polybar/scripts/spotify.sh

[module/math]
type = custom/text
click-left = "bash ~/.config/polybar/scripts/math-shortcut"
content = " Math! "

[module/i3]
type = internal/i3
format = "<label-state> <label-mode> "
index-sort = false
wrapping-scroll = false

